command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

# Battery indicator
[battery]
label=󰂄
#instance=1
interval=30

[power_profile]
label=
command=system76-power profile | grep Profile | awk '{print substr($3,1,4)}'
interval=1

[brightness]
label=󰃞
command=light
interval=once
signal=11

[volume]
label=󰕾
instance=Master
interval=once
signal=11
separator=true

[memory]
label=󰍛
separator=true
interval=1

[cpu_usage]
label=󰊚
interval=1
separator=true
align=right

[cpu_freq]
min_width=9999 Mhz
command=grep MHz /proc/cpuinfo | awk '{sum += $4} END {printf "%d MHz", sum/NR }'
interval=1

[fan]
label=󰈐
command=sensors | grep fan | awk '{print $2" RPM"}'
interval=1

[temperature]
label=
interval=10

#[load_average]
#interval=10

# Date Time
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1



########## Variables
set $mod Mod4
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $refresh_i3status killall -SIGUSR1 i3status
set $refresh_i3blocks pkill -SIGRTMIN+11 i3blocks

########## Visual
# font pango:monospace 10
floating_modifier $mod
font pango:Cousine Nerd Font 11
default_border pixel 4
focus_follows_mouse no

########## Autostart
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy --nofork
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id nitrogen --restore
exec "setxkbmap -layout gb,tr"
exec "setxkbmap -option 'grp:alt_shift_toggle'"

########## Keybinds OS
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+d exec i3lock-fancy
bindsym $mod+Shift+e exec i3-nagbar -t warning -m 'Exit i3?' \
                -B 'PowerOff' 'systemctl poweroff' \
                -B 'Suspend' 'systemctl suspend' \
                -B 'Logout' 'i3-msg exit'

########## Keybinds Layouts
bindsym $mod+m move workspace to output right
bindsym $mod+e split toggle
bindsym $mod+v split v
bindsym $mod+z fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+o layout toggle split
bindsym $mod+f floating toggle
bindsym $mod+Shift+f focus mode_toggle
bindsym $mod+p focus parent
#bindsym $mod+d focus child

########## Keybinds Launcher
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return exec google-chrome
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+space exec "rofi -modi drun,run -show drun -show-icons"

########## Keybinds Special Keys
# volumes
bindsym XF86AudioRaiseVolume exec --no-startup-id \
        pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id \
        pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id \
        pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id \
        pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3clocks

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id \
        light -A 5 && $refresh_i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id \
        light -U 5 && $refresh_i3blocks

# screenshot
bindsym Print exec --no-startup-id maim | \
        xclip -selection clipboard -t image/png
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | \
        xclip -selection clipboard -t image/png
bindsym Shift+Print exec --no-startup-id maim --select | \
        xclip -selection clipboard -t image/png

########## Keybinds Windows and Workspaces
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# resize window
mode "resize" {
        # resize mode
        bindsym h resize grow width 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink width 5 px or 5 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize grow width 5 px or 5 ppt
        bindsym Down resize shrink height 5 px or 5 ppt
        bindsym Up resize grow height 5 px or 5 ppt
        bindsym Right resize shrink width 5 px or 5 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "move" {
        # mode mode
        bindsym h move left
        bindsym j move down
        bindsym k move up
        bindsym l move right
        # same with arrows
        bindsym Left move left
        bindsym Down move down
        bindsym Up move up
        bindsym Right move right
        # back to normal: Enter or Escape or $mod+m
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+x mode "default"
}
bindsym $mod+x mode "move"

bar {
        status_command i3blocks
}
